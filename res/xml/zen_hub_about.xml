<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/about_title"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

    <PreferenceCategory
        android:key="developer_category"
        android:title="@string/developers_category_title">
        <Preference
            android:title="Viktor Hermann (ZeNiXxX)"
            android:summary="@string/zenx_developers_zenixxx"
            android:icon="@drawable/zenx_developer">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://www.paypal.me/vhermann"/>
        </Preference>

    </PreferenceCategory>

    <PreferenceCategory
        android:key="support_category" 
        android:title="@string/support_category_title"> 

    </PreferenceCategory>

    <PreferenceCategory
        android:key="maintainer_category" 
        android:title="@string/maintainers_category_title"> 

        <Preference
            android:key="maintainers"
            android:fragment="com.zenx.zen.hub.fragments.DeviceMaintainers"
            android:summary="@string/device_maintainers_title_summary"
            android:title="@string/device_maintainers_title"
            android:icon="@drawable/zenx_maintainer" />
    </PreferenceCategory>
		
    <PreferenceCategory
        android:key="links"
        android:title="@string/zenx_links">

        <Preference
            android:key="zenx_announcements"
            android:title="@string/zenx_announcements_title"
            android:summary="@string/zenx_announcements_summary"
            android:icon="@drawable/zenx_announcements">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://t.me/Zenx_OS"/>
        </Preference>

        <Preference
            android:key="zenx_telegram"
            android:title="@string/zenx_telegram_title"
            android:summary="@string/zenx_telegram_summary"
            android:icon="@drawable/zenx_telegram">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://t.me/zenxofficial"/>
        </Preference>

        <Preference
            android:key="zenx_discord"
            android:title="@string/zenx_discord_title"
            android:summary="@string/zenx_discord_summary"
            android:icon="@drawable/zenx_discord">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://discord.gg/YfhBCj4"/>
        </Preference>

        <Preference
            android:key="zenx_donate"
            android:title="@string/zenx_donate"
            android:summary="@string/zenx_donate_summary"
            android:icon="@drawable/zenx_donate">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://www.paypal.me/vhermann"/>
        </Preference>

        <Preference
            android:key="changelog"
            android:title="@string/changelog_title"
            android:summary="@string/changelog_title_summary"
            android:icon="@drawable/zenx_changelog"
            android:fragment="com.android.settings.zenx.Changelog">
        </Preference>

        <Preference
            android:key="zenx_website"
            android:title="@string/website_title"
            android:summary="@string/website_title_summary"
            android:icon="@drawable/zenx_website">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://sourceforge.net/projects/zenx-os/"/>
        </Preference>

        <Preference
            android:key="zenx_source"
            android:title="@string/zenx_source_title"
            android:summary="@string/zenx_source_summary"
            android:icon="@drawable/zenx_github">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://github.com/Zenx-OS"/>
        </Preference>
    </PreferenceCategory>
</PreferenceScreen>